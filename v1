
// try to build palette
var myPalette = buildUI(this);

// if it built, show palette
if (myPalette !=null && myPalette instanceof Window) {
   myPalette.show()
}

// create palette and build folder structure
function buildUI (thisObject) {
    var myWindow;

    if (thisObject instanceof Panel) {
        myWindow = thisObject;
    } else {
        myWindow = new Window ("palette", "My Window");
    }

    myWindow.myPanel = myWindow.add("group");
    myWindow.myPanel.orientation = "column";

    myWindow.myPanel.okButton1 = myWindow.add("button");
    myWindow.myPanel.okButton1.text = ("Generate Folders!");

    myWindow.layout.layout(true);
    // myWindow.layout.resize();

    myWindow.margins = 10;
    myWindow.spacing = 10;

    // var newComp;
    // newComp = app.project.rootFolder.items.addComp("XXXX_v01", 1920, 1080, 1.0, 10.0, 29.97);

    myWindow.myPanel.okButton1.onClick = function () {
        // store app.project.items for cleaner definitions
        var appItems = app.project.items;

        var renderComps = appItems.addFolder('00_RENDER COMPS'),
            // create a new comp in our new folder
            // compFolder0.items.addComp("XXXX_v01", 1920, 1080, 1.0, 10.0, 29.97);

            workingComps = appItems.addFolder('01_WORKING COMPS'),
            preComps = appItems.addFolder('02_PRECOMPS'),

            // initiates QT folder group
            quickTime = appItems.addFolder('03_QUICKTIME'),
            qtFootage = appItems.addFolder('FOOTAGE'),
            qtPreRenders = appItems.addFolder('PRE-RENDERS'),
            //qtFootage.parentFolder = qtPreRenders.parentFolder = quickTime, //makes qtX folders children of quickTime


            images = appItems.addFolder('04_IMAGES'),
            vector = appItems.addFolder('05_VECTOR'),
            audio = appItems.addFolder('06_AUDIO'),
            aeImport = appItems.addFolder('07_AE IMPORT'),
            premiereImport = appItems.addFolder('08_PREMIEREPRO IMPORT'),
            c4dImport = appItems.addFolder('09_C4D/3D IMPORT'),
            reference = appItems.addFolder('10_REFERENCE'),
            webPreviews = appItems.addFolder('11_WEB PREVIEWS');

        // alerts user on completion
        alert('Folders Generated!');
    }
    // win.center();
    //win.show();
}
